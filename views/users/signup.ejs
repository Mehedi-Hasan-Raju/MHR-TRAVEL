<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-9 offset-3">SIGN UP ON MHR WORLD TRAVELS</h2>
    <div class="col-6 offset-3">
        <form action = "/signup" method="POST" class="needs-validation" novalidate>
                
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input name="username" placeholder="Add Username" type="text" class="form-control" required>
                <div class="valid-feedback">username looks good!</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">email</label>
                <input name="email" placeholder="Add an Email" type="email" id="email" class="form-control" required>
                <div class="valid-feedback">valid email!</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input name="password" placeholder="Add password" type="password" id="password" class="form-control" required>
                
            </div>

            <button class="btn btn-success">SignUp</button>
        </form>

    </div>
</div>